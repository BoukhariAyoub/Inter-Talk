<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aboukhari.intertalking" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />



        <activity
            android:name=".activity.Login"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainTabs"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_main_tabs" >
        </activity>
        <activity
            android:name=".activity.Friends"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_friends" >
        </activity>
        <activity
            android:name=".activity.Conversations"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_conversations" >
        </activity>
        <activity
            android:name=".activity.ChatRoom"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_chat_room" >
        </activity>
    </application>

</manifest>
