<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_material_light</item>
        <item name="android:windowActionBar">false</item>
        <!-- <item name="android:editTextStyle">@style/EditTextStyle</item> -->
    </style>

    <style name="EditTextStyle" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/md_blue_100</item>
        <item name="colorControlActivated">@color/md_blue_100</item>
        <item name="colorControlHighlight">@color/md_blue_100</item>
    </style>

    <style name="RadioButton2">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:tint">@color/YellowGreen</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>


</resources>
