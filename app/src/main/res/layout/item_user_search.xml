<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/et_form"
    app:cardBackgroundColor="@color/transparent_light_grey"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="80dp"
            android:layout_height="80dp">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:transitionName="imageTransition"
                android:id="@+id/iv_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_9"
                app:siBorderColor="@color/primary_light"
                app:siBorderWidth="1dp"
                app:siRadius="3dp"
                app:siSquare="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:src="@android:drawable/presence_online" />


        </FrameLayout>

        <LinearLayout
            android:id="@+id/linear_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/frameLayout"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOUKHARI AYOUB"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:drawablePadding="2dp"
                android:textColor="@color/secondary_text"
                android:text="Meknes,Morocco" />


            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text"
                android:text="23 Years" />


            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Let's be friendly "
                android:visibility="gone" />


        </LinearLayout>



        <LinearLayout
            android:id="@+id/linear_actions"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">



        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>